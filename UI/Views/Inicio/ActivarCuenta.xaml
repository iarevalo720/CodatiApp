<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UI.Views.Inicio.ActivarCuenta"
             Title="ActivarCuenta">
    <VerticalStackLayout>
        <Entry
            x:Name="TxtCodigoActivacion"
            Text="{Binding CodigoActivacion}"
            Placeholder="Código de Activación"
            Keyboard="Text"
            Margin="0, 10, 0, 0"/>

        <Entry
            x:Name="TxtCorreo"
            Text="{Binding Correo}"
            Placeholder="Correo Electrónico"
            Keyboard="Email"
            Margin="0, 10, 0, 0"/>

        <Entry
            x:Name="TxtContrasena"
            Text="{Binding Contrasena}"
            Placeholder="Nueva Contraseña"
            IsPassword="True"
            Margin="0, 10, 0, 0"/>

        <Entry
            x:Name="TxtConfirmarContrasena"
            Text="{Binding ConfirmarContrasena}"
            Placeholder="Confirmar Contraseña"
            IsPassword="True"
            Margin="0, 10, 0, 0"/>

        <Button
            Text="Activar Cuenta"
            Margin="0, 20, 0, 0"
            Clicked="BtnActivarCuenta"/>
    </VerticalStackLayout>
</ContentPage>