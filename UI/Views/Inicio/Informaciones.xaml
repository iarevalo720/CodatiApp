<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UI.Views.Inicio.Informaciones"
             Title="Informaciones del Taller">

    <RefreshView IsRefreshing="{Binding EstaCargando}" 
                 Command="{Binding CargarInformaciones}">
        <ScrollView>
            <StackLayout Padding="20" Spacing="20" MaximumWidthRequest="500">

                <!-- Marcas y Modelos -->
                <Frame CornerRadius="10" BackgroundColor="#2a2a2a" BorderColor="#777">
                    <StackLayout Spacing="10">
                        <Label Text="VehÃ­culos que Atendemos" 
                               FontSize="18" 
                               FontAttributes="Bold" 
                               HorizontalOptions="Center"/>

                        <CollectionView ItemsSource="{Binding MarcasConModelos}" 
                                        SelectionMode="None">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <StackLayout Spacing="5">
                                        <Label Text="{Binding Marca.Nombre}" 
                                               FontSize="16" 
                                               FontAttributes="Bold" 
                                               TextColor="#6F3FBB"/>

                                        <CollectionView ItemsSource="{Binding Modelos}"
                                                        SelectionMode="None">
                                            <CollectionView.ItemTemplate>
                                                <DataTemplate>
                                                    <Label Text="{Binding Nombre}" 
                                                           FontSize="14" 
                                                           Margin="20,0,0,5"/>
                                                </DataTemplate>
                                            </CollectionView.ItemTemplate>
                                        </CollectionView>
                                    </StackLayout>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </StackLayout>
                </Frame>

                <!-- Servicios -->
                <Frame CornerRadius="10" BackgroundColor="#2a2a2a" BorderColor="#777">
                    <StackLayout Spacing="10">
                        <Label Text="Servicios que Ofrecemos" 
                               FontSize="18" 
                               FontAttributes="Bold" 
                               HorizontalOptions="Center"/>

                        <CollectionView ItemsSource="{Binding CategoriasConServicios}" 
                                        SelectionMode="None">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <StackLayout Spacing="5">
                                        <Label Text="{Binding Categoria.Nombre}" 
                                               FontSize="16" 
                                               FontAttributes="Bold" 
                                               TextColor="#6F3FBB"/>

                                        <CollectionView ItemsSource="{Binding Servicios}"
                                                        SelectionMode="None">
                                            <CollectionView.ItemTemplate>
                                                <DataTemplate>
                                                    <Label Text="{Binding Nombre}" 
                                                           FontSize="14" 
                                                           Margin="20,0,0,5"/>
                                                </DataTemplate>
                                            </CollectionView.ItemTemplate>
                                        </CollectionView>
                                    </StackLayout>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </StackLayout>
                </Frame>
            </StackLayout>
        </ScrollView>
    </RefreshView>
</ContentPage>