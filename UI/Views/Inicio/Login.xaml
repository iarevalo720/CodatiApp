<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UI.Views.Inicio.Login"
             NavigationPage.HasNavigationBar="False"
             Title="Login">
    <ScrollView>

        <Grid RowDefinitions=".3*, .7*">
            <Grid BackgroundColor="#4F3F9B" Grid.Row="0">
                <Label FontSize="50"
                       Text="CodatiApp"
                       VerticalOptions="Center"
                       HorizontalOptions="Center"
                       TextColor="White"
                       FontFamily="RobotoMedium"
                       FontAttributes="Bold"/>
            </Grid>

            <Grid Grid.Row="1">
                <RoundRectangle Margin="-5, -30, -5, -2"
                                CornerRadius="30, 30, 0, 0"
                                Fill="#333"
                                ZIndex="0"/>

                <VerticalStackLayout Margin="30, 0, 30, 0"
                                     MaximumWidthRequest="500"
                                     ZIndex="1">

                    <Label FontAttributes="Bold"
                           Text="Bienvenido!"
                           FontFamily="RobotoMedium"
                           TextColor="#eee"
                           FontSize="Medium"/>

                    <Label FontFamily="RobotoMedium"
                           Text="Iniciar Sesión"
                           TextColor="#BBB"/>

                    <Grid Margin="0, 30, 0, 0"
                          ColumnDefinitions="auto, *">
                        <RoundRectangle BackgroundColor="#444"
                                        CornerRadius="10"
                                        HeightRequest="50"
                                        WidthRequest="50"
                                        HorizontalOptions="Center"
                                        VerticalOptions="Center"/>
                        <Image HorizontalOptions="Center"
                               Margin="0">
                            <Image.Source>
                                <FontImageSource FontFamily="Icons"
                                                 Glyph="&#xF0E0;"
                                                 Size="27"
                                                 Color="#ddd"/>
                            </Image.Source>
                        </Image>
                        <Entry Grid.Column="1"
                               Text="{Binding Correo}"
                               Placeholder="CORREO"
                               PlaceholderColor="#aaa"
                               Keyboard="Email"
                               TextColor="#eee"
                               VerticalOptions="Center"/>
                    </Grid>

                    <Grid Margin="0, 10, 0, 0"
                          ColumnDefinitions="auto, *">
                        <RoundRectangle BackgroundColor="#444"
                                        CornerRadius="10"
                                        HeightRequest="50"
                                        WidthRequest="50"
                                        HorizontalOptions="Center"
                                        VerticalOptions="Center"/>
                        <Image HorizontalOptions="Center"
                               Margin="0">
                            <Image.Source>
                                <FontImageSource FontFamily="Icons"
                                                 Glyph="&#xE800;"
                                                 Size="35"
                                                 Color="#ddd"/>
                            </Image.Source>
                        </Image>
                        <Entry Grid.Column="1"
                               Text="{Binding Contrasena}"
                               Placeholder="CONTRASEÑA"
                               PlaceholderColor="#aaa"
                               IsPassword="True"
                               TextColor="#eee"
                               VerticalOptions="Center"/>
                    </Grid>

                    <Button Margin="0, 20, 0, 0"
                            BackgroundColor="#4F3F9B"
                            HeightRequest="60"
                            Text="Iniciar Sesión"
                            FontFamily="RobotoMedium"
                            FontSize="18"
                            FontAttributes="Bold"
                            Clicked="BtnLogin"
                            TextColor="#ccc"/>

                    <Button Margin="0, 10, 0, 0"
                            BackgroundColor="#ccc"
                            HeightRequest="60"
                            Text="Activar cuenta por primera vez"
                            FontFamily="RobotoMedium"
                            FontSize="18"
                            Clicked="BtnActivarCuenta"
                            TextColor="#4F3F9B"/>

                    <Button Margin="0, 10, 0, 0"
                            BackgroundColor="#ccc"
                            HeightRequest="60"
                            Text="Informaciones"
                            FontFamily="RobotoMedium"
                            FontSize="18"
                            Clicked="BtnIrInformaciones"
                            TextColor="#4F3F9B"/>
                </VerticalStackLayout>
            </Grid>
        </Grid>
    </ScrollView>
</ContentPage>