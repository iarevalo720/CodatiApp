<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UI.Views.Taller.T_ordenes"
             Title="T_ordenes">
    <CollectionView ItemsSource="{Binding OrdenResumen}" Margin="20, 20, 20, 0">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Grid RowDefinitions="30, 30, *, *, 100, 60"
                      ColumnDefinitions=".35*, .65*"
                      MaximumWidthRequest="470">
                    <Label Text="{Binding NroOrden, StringFormat='Orden #{0}'}"
                           Grid.Column="0"
                           Grid.Row="0"
                           FontSize="Medium"
                           VerticalOptions="Center"
                           FontAttributes="Bold"/>
                    <Label Text="{Binding Estado}"
                           Grid.Column="1"
                           Grid.Row="0"
                           FontSize="Small"
                           FontAttributes="Bold"
                           HorizontalOptions="End"
                           VerticalOptions="Center"/>

                    <Label Text="{Binding ResumenVehiculo}"
                           FontSize="Medium"
                           VerticalOptions="Center"
                           Grid.Row="1"
                           Grid.ColumnSpan="2"/>

                    <CollectionView ItemsSource="{Binding SubCategoria}"
                        Margin="0, 30, 0, 20"
                        Grid.Row="2"
                        Grid.ColumnSpan="2">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid HeightRequest="43">
                                    <Frame Background="#2a2a2a" CornerRadius="5" Padding="10" BorderColor="#888" HeightRequest="40"/>
                                    <Label Text="{Binding .}"
                                           FontSize="Small"
                                           TextColor="#aaa"
                                           VerticalTextAlignment="Center"
                                           Margin="15, 0, 0, 0"/>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <VerticalStackLayout
                        Margin="0, 0, 0, 20"
                        Grid.Row="3"
                        Grid.Column="0"
                        Grid.ColumnSpan="2">
                        <Label Text="ObservaciÃ³n del cliente:"
                               FontSize="Medium"/>
                        <Label Text="{Binding Observacion}"
                               TextColor="#888"
                               FontSize="Small"/>
                    </VerticalStackLayout>

                    <Grid Grid.Row="4"
                          Grid.ColumnSpan="2"
                          RowDefinitions="*, *"
                          ColumnDefinitions="*, *"
                          RowSpacing="5"
                          ColumnSpacing="5">
                        <Button
                            Grid.Column="0"
                            Text="Aceptar"
                            IsEnabled="{Binding BtnAceptarEnabled}"
                            Clicked="BtnAceptarOrden"/>

                        <Button
                            Grid.Column="1"
                            Text="Rechazar"
                            IsEnabled="{Binding BtnRechazarEnabled}"
                            Clicked="BtnRechazarOrden"/>

                        <Button 
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Grid.Row="1"
                            IsEnabled="{Binding BtnDetallesEnabled}"
                            Text="Detalles"
                            Clicked="BtnDetalleOrden"/>
                    </Grid>

                    <Frame 
                        Grid.Row="5"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Margin="0, 28, 0, 28"
                        Background="#454545"
                        HasShadow="true"
                        BorderColor="Transparent"/>
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>